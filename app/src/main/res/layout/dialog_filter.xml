<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 搜索框 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="搜索ID或标题" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 推荐 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRecommendYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRecommendNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ai"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter1Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter1No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修正类型"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2None"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无修正"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑线"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薄模糊"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Heavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厚模糊"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白色"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全彩"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter3Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter3Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter3No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="纯爱"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter4Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter4Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter4No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单人/男主/扶她/多人"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单人"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男主"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扶她"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多人"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="应用"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>