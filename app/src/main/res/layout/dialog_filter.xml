<?xml version="1.0" encoding="utf-8"?>
<!-- deprecated temporarily -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 搜索框 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_id_or_name" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 推荐 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommended"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRecommendYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRecommendNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter1Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter1No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/censored_type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2None"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uncensored"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c_black_lines"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c_thin_blur"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Heavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c_thick_blur"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter2Complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/white"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/full_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter3Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter3Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter3No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chunai"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter4Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter4Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter4No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 筛选5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tag"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_1p"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_cealus"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_futa"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilter5Type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_3p_or_more"
                android:checkable="true"
                app:chipStrokeColor="@color/chip_stroke_green"
                app:chipStrokeWidth="2dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/clear"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/apply"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>